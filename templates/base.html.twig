<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {{ encore_entry_link_tags('app') }}
        {# {{ encore_entry_script_tags('app') }} #}
    </head>
    <body>
        {# HEADER #}
        {% block HEADER %}
            <header>
                <nav>
                    <ul>
                        <li><a class="{% if app.request.attributes.get('_route') == 'app_accueil' %} active {% endif %}" href={{ path('app_accueil')}}>Accueil</a></li>
                        <li><a class="{% if app.request.attributes.get('_route') == 'app_escape_game' %} active {% endif %}" href={{ path('app_escape_game')}}>Escape Game</a></li>
                        {% if app.user != null %}
                            <li><a class="{% if app.request.attributes.get('_route') == 'app_logout' %} active {% endif %}" href={{ path('app_logout')}}>Profil</a></li>
                        {% endif %}
                        {% if app.user == null %}
                            <li><a class="{% if app.request.attributes.get('_route') == 'app_inscription' %} active {% endif %}" href={{ path('app_inscription')}}>Inscription</a></li>
                        {% endif %}
                        <li><a href=""><img src="" alt=""></a></li>
                        {% if app.user == null %}
                            <li><a class="{% if app.request.attributes.get('_route') == 'app_login' %} active {% endif %}" href={{ path('app_login')}}>Connexion</a></li>
                        {% endif %}
                        {% if app.user != null %}
                            <li><a class="{% if app.request.attributes.get('_route') == 'app_logout' %} active {% endif %}" href={{ path('app_logout')}}>Déconnexion</a></li>
                        {% endif %}
                        <li><a class="{% if app.request.attributes.get('_route') == 'app_calendrier' %} active {% endif %}" href={{ path('app_calendrier')}}>Calendrier</a></li>
                        <li><a class="{% if app.request.attributes.get('_route') == 'app_contact' %} active {% endif %}" href={{ path('app_contact')}}>Contact</a></li>
                    </ul>
                </nav>
            </header>  
        {% endblock %}

        {# MAIN #}
        {% block MAIN %}
            <section>
            </section>
        {% endblock %}      

        {# FOOTER #}
        {% block FOOTER %}
            {# <li><a class="{% if app.request.attributes.get('_route') == 'app_escape_game' %} active {% endif %}" href={{ path('app_escape_game')}}>FAQ</a></li> #}
            <footer>
                <p>© 2025 - Tous droits réservés</p>
                <ul>
                    <li><a href="">Mentions légales</a></li>
                    <li><a href="">Politique de confidentialité</a></li>
                    <li><a href="">Conditions d'utilisation</a></li>
                </ul>
                <p>Suivez-nous sur les réseaux sociaux :</p>
                <ul>
                    <li><a href="" >Facebook</a></li>
                    <li><a href="" >Instagram</a></li>
                    <li><a href="" >Twitter</a></li>
                </ul>
            </footer>
        {% endblock %}
    </body>
</html>
