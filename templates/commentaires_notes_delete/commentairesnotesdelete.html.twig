{% extends 'base.html.twig' %}

{% block title %}Suppression commentaire{% endblock %}

{% block MAIN %}
    {# SUPPRESSION COMMENTAIRES #}
    <section id="commentairedelete">
        <form method="POST" onsubmit="return confirm('Confirmer la suppression ?')" 
            action="{{ path('app_commentaires_notes_delete', {'id': commentaire.id}) }}">
            <input type="hidden" name="_method" value="delete"> 
            <input type="hidden" name="_token" value="{{ csrf_token('SUP' ~ commentaire.id) }}">
            <input id="delete" type="submit" value="Supprimer">     
        </form>
    </section>
{% endblock %}